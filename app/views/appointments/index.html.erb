<h1>Listing appointments</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Duration</th>
    <th>Patient</th>
    <th>Doctor</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @appointments.each do |appointment| %>
  <tr>
    <td><%= appointment.date %></td>
    <td><%= appointment.duration %></td>
    <td><%= appointment.patient ? appointment.patient.name : 'No patient' %></td>
    <td><%= appointment.doctor ? appointment.doctor.name : 'No doctor' %></td>
    <td><%= link_to 'Show', appointment %></td>
    <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
    <td><%= link_to 'Destroy', appointment, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

